					<userdata name="тип_данных"><![CDATA[text/html]]></userdata>
					<userdata name="расширение_файла"><![CDATA[.html]]></userdata>
			</item>

			<item type="button"
				id="bash_скрипт"
				text="Bash-скрипт"
				img="../imgs_menu/text_document.gif">
					<userdata name="тип_данных"><![CDATA[application/x-sh]]></userdata>
					<userdata name="расширение_файла"><![CDATA[.sh]]></userdata>
			</item>

